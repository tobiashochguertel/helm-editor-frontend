{
  "name": "helm-playground",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:wasm": "cd src/renderer/pkg/playground && GOOS=js GOARCH=wasm go build -ldflags='-s -w' -o ../../../../public/main.wasm",
    "build:wasm-exec": "cat $(go env GOROOT)/misc/wasm/wasm_exec.js > public/wasm_exec.js",
    "build:wasm-big": "cd src/renderer/pkg/render && GOOS=js GOARCH=wasm go build  -o ../../../../public/main-big.wasm",
    "dev": "yarn run build:wasm && yarn run build:wasm-exec && REACT_APP_WASM_SIZE=$(wc -c <'./public/main.wasm') vite",
    "build": "REACT_APP_WASM_SIZE=$(wc -c <'./public/main.wasm') tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --host"
  },
  "dependencies": {
    "@geist-ui/core": "^2.3.8",
    "@monaco-editor/react": "^4.5.1",
    "@tanstack/react-query": "^4.29.5",
    "@tanstack/react-query-devtools": "^4.29.6",
    "@types/golang-wasm-exec": "^1.15.0",
    "@uiw/react-monacoeditor": "^3.5.8",
    "bootstrap": "^5.2.3",
    "console-log-colors": "^0.4.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "feather-icons": "^4.29.0",
    "localforage": "^1.10.0",
    "match-sorter": "^6.3.1",
    "nodemon": "^2.0.22",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.4",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-monaco-editor": "^0.52.0",
    "react-router-dom": "^6.10.0",
    "sort-by": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.1.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vite-plugin-top-level-await": "^1.3.0",
    "vite-plugin-wasm": "^3.2.2"
  }
}
